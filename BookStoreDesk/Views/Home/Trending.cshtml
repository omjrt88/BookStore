@model BookStoreDesk.Models.TrendingViewModel
@{
    ViewData["Title"] = "BookStore";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action active">Trending Books</a>
                        <div class="list-group-item">
                            <h4 class="list-group-item-heading">
                                Order by Qualification review votes.
                            </h4>
                            <ol class="list-group-item-text">
                                @foreach (var item in Model.TrendingBooks)
                                {
                                <li class="list-item">
                                    @Html.ActionLink(item.Name, "Details","Books", routeValues: new { Id = item.Id },
                                        htmlAttributes: null) <span class="badge badge-secondary badge-pill">@Html.DisplayFor(modelItem => item.ReviewsSum)</span>
                                </li>
                                }
                            </ol>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action active">Newest Books</a>
                        <div class="list-group-item">
                            <h4 class="list-group-item-heading">
                                Order by Newest.
                            </h4>
                            <ul class="list-group-item-text">
                                @foreach (var item in Model.NewestBooks)
                                {
                                    <li class="list-item">
                                        @Html.ActionLink(item.Name, "Details","Books", routeValues: new { Id = item.Id },
                                            htmlAttributes: null) <span class="badge badge-info badge-pill">@Html.DisplayFor(modelItem => item.Published)</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>